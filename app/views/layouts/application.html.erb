<!DOCTYPE html>
<html>
  <head>
    <title>DeviseAuthentication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
    Logged in as <strong> <%=
    current_user.email %> </strong>.

    <%= link_to 'Edit profile',
    edit_user_registration_path, :class => 'navbar-link' %>

    <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
    <%= link_to 'My Posts', posts_path %> |
    <%= link_to 'My Cheesy Treats', cheeses_path %> |



    <%else%>
    <%= link_to 'Sign up', new_user_registration_path,
    :class => 'navbar-link'  %> |
    <%end%>

    <%= yield %>

    <!-- USER CAN LOG OUT FROM ANY PAGE IN THE APP -->
    <td><%= link_to 'Log out',  destroy_user_session_path, method: :delete %></td>

    <!-- AUTHORISATION -->
    <% if current_user %>
<% end %>

  </body>
</html>
